package tp1.revisions;

import java.util.*;

/**
 * @author Loris
 */


public class TP1Revisions {
    public static void main(String[] args) {
        // Init
        int kms , litres;
        float conso;
        Scanner clavier;
        clavier = new Scanner(System.in);
        
        // Body
        System.out.println("Nombre de kilo déjà parcourus : ");
        kms = clavier.nextInt();
        
        System.out.println("Nombre de litres conso : ");
        litres = clavier.nextInt();
        
        // Calcul de la conso au 100km
        conso = ((float)litres*100)/kms;
        System.out.println("Conso aux 100km :" + conso);
    }
    
}
