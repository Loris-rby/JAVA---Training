package tp1.revisions;

import java.util.*;

/**
 * @author Loris
 */


public class TP1Revisions {
    public static void main(String[] args) {
        // Init
        int litres;
        float prixLitre, coutTotal;
        Scanner clavier;
        clavier = new Scanner(System.in);
        
        // Body
        System.out.println("Prix au litre : ");
        prixLitre = clavier.nextInt();
        
        System.out.println("Nombre de litres conso : ");
        litres = clavier.nextInt();
        
        // Calcul du cout total
        coutTotal = prixLitre * (float)litres;
        System.out.println("cout total :" + coutTotal);
    }
    
}
